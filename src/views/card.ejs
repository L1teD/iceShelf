<%- include('../public/partials/head.ejs') %>
<section class="main-app bg-dark-black">
    <%- include('../public/partials/frame.ejs') %>
    <%- include('../public/partials/bottom-menu.ejs') %>
    <%- include('../public/partials/side-menu.ejs') %>
    
    <div class="container-fluid bg-dark py-2">
        <a href="/" class="btn btn-outline-secondary">Back</a>
    </div>

    <section class="item-card text-light pb-5" style="height: 100%; overflow-y: scroll;">
        <img src="<%= result.img %>" alt="" style="object-fit: contain; width: 100%; height: 100dvw; background-color: rgba(0, 0, 0, 0.3);">
        <div class="p-3">
            <h1><%= result.name %></h1>
            <p><%= result.price %> ₽</p>
            <a href="/buy/<%= result.id %>" class="btn btn-outline-success w-100">В корзину</a>
            <p class="m-0 mt-3 text-secondary ms-2">Описание:</p>
            <p class="mb-5 w-100"><%= result.descr %></p>
        </div>
    </section>

</section>
    
<%- include('../public/partials/footer.ejs') %>